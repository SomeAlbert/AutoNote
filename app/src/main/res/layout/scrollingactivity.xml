<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF"
    android:minWidth="330dp"
    android:minHeight="70dp"
    tools:context=".ScrollingActivity">


    <TextView
        android:id="@+id/textView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        android:background="@color/colorPrimaryDarkD"
        android:text="@string/subjects_string"
        android:textAlignment="center"
        android:textAppearance="@style/TextAppearance.AppCompat.Body1"
        android:textColor="@color/colorWhite"
        android:textSize="25sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/rus"


        android:layout_width="317dp"
        android:layout_height="88dp"
        android:layout_marginTop="44dp"

        android:background="@drawable/russian"
        android:backgroundTint="@color/colorPrimaryDarkD"
        android:backgroundTintMode="add"
        android:text="Russian"
        android:textAlignment="textStart"
        app:cornerRadius="35dp"
        app:icon="@drawable/ic_gremlin"
        app:iconPadding="8dp"
        app:iconSize="64dp"

        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.511"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/eng" />

    <Button
        android:id="@+id/eng"

        style="ButtonMain"
        android:layout_width="317dp"
        android:layout_height="88dp"
        android:layout_marginTop="80dp"
        android:backgroundTint="@color/colorPrimaryDarkD"
        android:backgroundTintMode="add"

        android:text="English"
        android:textAlignment="textStart"
        app:cornerRadius="35dp"
        app:icon="@drawable/ic_bigben"
        app:iconPadding="8dp"
        app:iconSize="68dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView" />

    <TextView
        android:id="@+id/textView3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Choose your subject"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView" />


</androidx.constraintlayout.widget.ConstraintLayout>